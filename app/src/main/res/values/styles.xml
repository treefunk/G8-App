<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/back_icon_85</item>
        <item name="android:actionBarSize">@dimen/_57sdp</item>
    </style>

    <style name="dashboardRedText">
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorDarkRed</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:lines">2</item>
    </style>

    <style name="toolbarRed">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:background">@color/colorDarkRed</item>
        <item name="android:shadowColor">@color/colorBlack</item>
    </style>

    <style name="toolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>

    <style name="robotoTextWhiteBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="robotoTextWhiteRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="tabsTheme" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>
