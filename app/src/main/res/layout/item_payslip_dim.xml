<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:background="@drawable/shape_rectangle_darker_red"
    android:paddingTop="@dimen/_13sdp"
    android:paddingBottom="@dimen/_13sdp"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_13sdp"
    android:layout_marginRight="@dimen/_13sdp"
    android:weightSum="10"

    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_weight="9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/_5sdp"

            android:text="October 15, 2019"
            android:textAllCaps="true"
            android:textSize="@dimen/_18ssp"
            style="@style/robotoTextWhiteBold"
            android:textColor="@color/colorWhiteRed"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Click to view"
            style="@style/robotoTextWhiteRegular"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorWhiteRed"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="15"
            android:gravity="center|bottom"



            style="@style/robotoTextWhiteBold"
            android:textColor="@color/colorWhiteRed"
            android:textSize="@dimen/_12ssp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            style="@style/robotoTextWhiteRegular"
            android:text="days\n ago"
            android:gravity="center|top"
            android:textColor="@color/colorWhiteRed"
            android:textSize="@dimen/_7ssp"
            />

    </LinearLayout>







</LinearLayout>