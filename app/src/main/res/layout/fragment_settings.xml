    <View
        android:id="@+id/box_my_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13sdp"

        android:paddingTop="@dimen/_13sdp"
        android:paddingBottom="@dimen/_13sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"

        android:background="@drawable/shape_rectangle_darker_red"

        />

    <ImageView
        android:id="@+id/img_my_name"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"

        app:layout_constraintLeft_toLeftOf="@id/box_my_name"
        app:layout_constraintTop_toTopOf="@id/box_my_name"
        app:layout_constraintBottom_toBottomOf="@id/box_my_name"

        android:src="@drawable/img_my_account"
        />

    <TextView
        android:id="@+id/label_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/box_my_name"
        app:layout_constraintLeft_toRightOf="@id/img_my_name"
        app:layout_constraintRight_toRightOf="@id/box_my_name"
        app:layout_constraintBottom_toTopOf="@id/tv_my_name"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"

        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_2sdp"

        android:text="My Name"

        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/tv_my_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/label_my_name"
        app:layout_constraintLeft_toRightOf="@id/img_my_name"
        app:layout_constraintBottom_toBottomOf="@id/box_my_name"
        app:layout_constraintRight_toRightOf="@id/box_my_name"
        app:layout_constraintHorizontal_bias="0"


        android:text="Pamela Katrina V. Santiago"
        style="@style/robotoTextWhiteRegular"
        android:textSize="@dimen/_12ssp"
        />

