<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/_185sdp"
    android:background="@drawable/shape_rectangle_rounded_corners"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_7sdp"
    >

    <ImageView
        android:id="@+id/iv_bulletin_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:src="@drawable/sample"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlackA50"
            android:orientation="vertical"

            android:paddingTop="@dimen/_8sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            >
            <TextView
                android:id="@+id/tv_bulletin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"

                android:text="MEMO TITLE"
                style="@style/robotoTextWhiteBold"

                />

            <TextView
                android:id="@+id/tv_bulletin_body"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                tools:text="@tools:sample/lorem/random"
                style="@style/robotoTextWhiteRegular"
                />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>