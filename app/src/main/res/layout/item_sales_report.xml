<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/_35sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_rectangle_dark_red_no_border_radius">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="match_parent"

        android:layout_marginLeft="@dimen/_20sdp"

        android:text="NOVEMBER 1"
        android:fontFamily="@font/roboto_bold"
        android:textFontWeight="600"
        android:textSize="@dimen/_15ssp"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="@android:color/white"

        />

    <EditText
        android:id="@+id/et_sales_value"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="@dimen/_5sdp"

        android:gravity="center"
        android:background="@drawable/shape_white_outline"
        tools:text="1233423123123"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@drawable/selector_button_main"
        android:inputType="number"
        />

</LinearLayout>