<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp">

    <View
        android:id="@+id/chat_rect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        android:background="@drawable/shape_rectangle_white_rounded_chat_to"

        />




        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="@id/chat_rect"
            app:layout_constraintLeft_toLeftOf="@id/chat_rect"
            app:layout_constraintRight_toRightOf="@id/chat_rect"
            app:layout_constraintBottom_toTopOf="@id/tv_message"
            app:layout_constraintVertical_chainStyle="packed"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"

            android:text="Jhondz"

            tools:text="@tools:sample/first_names"


            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_17ssp"

            />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toLeftOf="@id/chat_rect"
            app:layout_constraintRight_toRightOf="@id/chat_rect"
            app:layout_constraintBottom_toTopOf="@id/tv_date"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"

            tools:text="@tools:sample/lorem/random"

            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="left"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/_12ssp"

            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/tv_message"
            app:layout_constraintLeft_toLeftOf="@id/chat_rect"
            app:layout_constraintRight_toRightOf="@id/chat_rect"
            app:layout_constraintBottom_toBottomOf="@id/chat_rect"

            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"



            android:textColor="@android:color/black"

            android:text="Sept. 29, 2019 | 03:10PM"

            android:fontFamily="@font/roboto_light"
            android:textSize="@dimen/_8ssp"
            android:textStyle="italic"

            />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_10sdp"

            app:layout_constraintBottom_toBottomOf="@id/chat_rect"
            app:layout_constraintLeft_toLeftOf="@id/chat_rect"
            app:layout_constraintRight_toRightOf="@id/chat_rect"
            app:layout_constraintHorizontal_bias="0"
            android:baselineAlignBottom="true"

            android:src="@drawable/ic_arrow_drop_up_black_24dp"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:layout_marginTop="@dimen/_100sdp"
            android:scaleX="8.5"
            android:scaleY="7"
            />


</androidx.constraintlayout.widget.ConstraintLayout>