<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/appbg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/box_upload_from_gallery"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/shape_rectangle_white"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_take_a_photo"

        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_10sdp"


        />

    <ImageView
        android:id="@+id/img_upload_from_gallery"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/box_upload_from_gallery"
        app:layout_constraintRight_toRightOf="@id/box_upload_from_gallery"
        app:layout_constraintLeft_toLeftOf="@id/box_upload_from_gallery"
        app:layout_constraintBottom_toTopOf="@id/label_upload_timeslip"

        android:layout_marginTop="@dimen/_5sdp"

        android:src="@drawable/img_gallery_"
        android:scaleType="centerInside"
        android:tint="@color/redTintDisable"
        />

    <TextView
        android:id="@+id/label_upload_timeslip"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"

        app:layout_constraintTop_toBottomOf="@id/img_upload_from_gallery"
        app:layout_constraintRight_toRightOf="@id/box_upload_from_gallery"
        app:layout_constraintLeft_toLeftOf="@id/box_upload_from_gallery"
        app:layout_constraintBottom_toBottomOf="@id/box_upload_from_gallery"

        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"

        android:text="@string/label_upload_from_gallery"
        android:breakStrategy="high_quality"

        style="@style/dashboardRedText"
        android:textColor="@drawable/selector_text_red_with_disable"
        android:textSize="@dimen/_15ssp"
        />

    <View
        android:id="@+id/box_take_a_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/shape_rectangle_white"

        app:layout_constraintTop_toBottomOf="@id/box_upload_from_gallery"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_80sdp"


        />

    <ImageView
        android:id="@+id/img_take_a_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/box_take_a_photo"
        app:layout_constraintRight_toRightOf="@id/box_take_a_photo"
        app:layout_constraintLeft_toLeftOf="@id/box_take_a_photo"
        app:layout_constraintBottom_toTopOf="@id/label_take_a_photo"

        android:layout_marginTop="@dimen/_5sdp"

        android:src="@drawable/img_camera"
        android:scaleType="centerInside"
        android:tint="@color/redTintDisable"

        />

    <TextView
        android:id="@+id/label_take_a_photo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_35sdp"

        app:layout_constraintTop_toBottomOf="@id/img_take_a_photo"
        app:layout_constraintRight_toRightOf="@id/box_take_a_photo"
        app:layout_constraintLeft_toLeftOf="@id/box_take_a_photo"
        app:layout_constraintBottom_toBottomOf="@id/box_take_a_photo"

        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"

        android:text="@string/label_take_a_photo"
        android:breakStrategy="high_quality"
        style="@style/dashboardRedText"
        android:textColor="@drawable/selector_text_red_with_disable"
        android:textSize="@dimen/_15ssp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>