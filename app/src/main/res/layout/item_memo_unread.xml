<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_130sdp"
    android:background="@drawable/shape_border_top_and_bot_nobg"
    android:weightSum="6"
    android:paddingTop="@dimen/_12sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:layout_margin="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/tv_memo_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:text="Memo Title 4"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/colorLightGreyButton"

        />

    <TextView
        android:id="@+id/tv_memo_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"

        tools:text="@tools:sample/lorem/random"

        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/_12ssp"

        android:textColor="@color/colorLightGrey"


        />

    <TextView
        android:id="@+id/tv_memo_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:text="NOW"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/colorLightGrey"
        android:gravity="right|bottom"

        />

</LinearLayout>